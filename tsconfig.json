{
   "compilerOptions": {
      "target": "ES2020",
      "lib": [
         "ES2020",
         "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "strict": true,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "paths": {
         "@modules/*": [
            "modules/*"
         ],
         "@database/*": [
            "database/*"
         ],
      }
   },
   "include": [
      "src/**/*"
   ]
}